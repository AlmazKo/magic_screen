<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">100sp</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
    </style>


    <style name="timer">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">#ffa0a0a0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="plus_minus">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="description">
        <item name="android:textColor">#ffe5e5e5</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">#ff2f2f2f</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="series">
        <item name="android:textColor">#ffe5e5e5</item>
        <item name="android:shadowColor">#ffff1513</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>
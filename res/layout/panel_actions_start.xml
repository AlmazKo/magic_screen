<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="50dp"
                android:layout_alignParentLeft="false"
                android:background="#ff54636e" android:id="@+id/panel_actions_start"
                android:layout_centerInParent="true" android:longClickable="false"
                android:clickable="true">

    <ImageView android:id="@+id/panel_actions_btn_start"
               android:src="@drawable/ic_action_play"
               style="?android:attr/borderlessButtonStyle"
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:layout_alignParentLeft="true" android:layout_centerInParent="true" android:layout_gravity="center"
               android:layout_marginLeft="5dp"/>


    <ImageView android:id="@+id/panel_actions_btn_full_screen"
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:src="@drawable/ic_action_full_screen"
               style="?android:attr/borderlessButtonStyle"
               android:layout_gravity="center_vertical" android:layout_alignTop="@+id/panel_actions_btn_brightness"
               android:layout_toLeftOf="@+id/panel_actions_btn_settings" android:layout_marginRight="8dp"/>


    <ImageView android:id="@+id/panel_actions_btn_brightness"
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:src="@drawable/ic_action_brightness_high"
               style="?android:attr/borderlessButtonStyle"
               android:layout_gravity="center_vertical"
               android:layout_alignTop="@+id/panel_actions_btn_start"
               android:layout_toLeftOf="@+id/panel_actions_btn_full_screen"
               android:layout_marginRight="8dp"/>

    <ImageView android:id="@+id/panel_actions_btn_settings"
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:src="@drawable/ic_action_overflow"
               style="?android:attr/borderlessButtonStyle"
               android:layout_gravity="center_vertical"
               android:layout_alignTop="@+id/panel_actions_btn_full_screen" android:layout_alignParentRight="true"
               android:layout_marginRight="5dp"/>
</RelativeLayout>




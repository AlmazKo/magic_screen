<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true">


    <FrameLayout
            android:id="@+id/player_1_screen"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_alignParentLeft="false" android:layout_alignParentTop="true" />

    <FrameLayout
            android:id="@+id/player_2_screen"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_alignParentLeft="false" android:layout_alignParentBottom="true" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp" android:id="@+id/player_1_score">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scr1_minus"
                android:background="@drawable/minus"
                android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp" android:visibility="invisible"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_alignWithParentIfMissing="false"
                android:gravity="center"
                android:id="@+id/scr1_score"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                style="@style/main_title"/>


        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scr1_plus"
                android:background="@drawable/plus"
                android:layout_centerVertical="true" android:layout_alignParentRight="true"
                android:layout_marginRight="32dp" android:padding="10dp" android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="285dp" android:layout_marginTop="-275dp" android:id="@+id/player_2_score"
            android:layout_alignParentBottom="true">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scr2_minus"
                android:background="@drawable/minus"
                android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp" android:visibility="invisible"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_alignWithParentIfMissing="false"
                android:gravity="center"
                android:id="@+id/scr2_score"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                style="@style/main_title"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scr2_plus"
                android:background="@drawable/plus"
                android:layout_centerVertical="true" android:layout_alignParentRight="true"
                android:layout_marginRight="32dp" android:visibility="invisible"/>
    </RelativeLayout>


    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView" android:layout_alignParentBottom="false"
            android:layout_centerInParent="true" android:background="#ff777777"/>

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/f_actions"
                 android:layout_centerInParent="true" android:name="com.github.almazko.magic_screen.ActionsFragment"
                 tools:layout="@layout/action"/>

</RelativeLayout>
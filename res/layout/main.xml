<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:text="20"
            android:textSize="80dp"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:id="@+id/scr_player1"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:text="20"
            android:id="@+id/scr_player2" android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" android:textSize="80dp" android:layout_centerVertical="true"
            android:focusable="true" android:focusableInTouchMode="true" android:gravity="center"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_marginBottom="53dp" android:layout_above="@+id/scr_player2"
            android:layout_toLeftOf="@+id/scr_player1" android:layout_marginRight="39dp"
            android:background="@drawable/minus"/>
</RelativeLayout>

